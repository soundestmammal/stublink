<script> 

	function subscribe() {
		document.getElementById("signup-form").classList.add("hidden");
		document.getElementById("signup-success").classList.remove("hidden");	
	}
	$(document).ready( function() {
		var topOfOthDiv = $("#content-wrapper").offset().top;
		var contrTop = $("#home").offset().top;
		var contrBot = $("#contact").offset().top;
		
		// console.log(topOfOthDiv);
		// console.log(contrTop);
		// console.log(contrBot);
		// console.log($(window).scrollTop());
		$(window).scroll(function() {
		
			if($(window).scrollTop() < 430) {
				$("#nav-home").addClass("nav-active");
				$("#nav-about").removeClass("nav-active");
				$("#nav-contact").removeClass("nav-active");
				$("#nav-blog").removeClass("nav-active");
			} else if($(window).scrollTop() + $(window).height() == $(document).height()) {
				$("#nav-home").removeClass("nav-active");
				$("#nav-about").removeClass("nav-active");
				$("#nav-contact").addClass("nav-active");
				$("#nav-blog").removeClass("nav-active");
			} else if($(window).scrollTop() > contrTop) {
				$("#nav-home").removeClass("nav-active");
				$("#nav-about").addClass("nav-active");
				$("#nav-contact").removeClass("nav-active");
				$("#nav-blog").removeClass("nav-active");
			}
		});
	});
</script>

